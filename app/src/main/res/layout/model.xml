<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/modelIDTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/modelTitleTv"
            style="Base.TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mCategoryTv"
            android:text="Title"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/mCategoryTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/modelIDTv"
            android:text="Category"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/modelImageIv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/modelTitleTv"
            android:layout_centerHorizontal="true"
            android:src="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/modelDescrTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/modelImageIv"
            android:text="Sample description..."
            android:textColor="#000"
            android:textSize="15sp" />



    </RelativeLayout>
</androidx.cardview.widget.CardView>