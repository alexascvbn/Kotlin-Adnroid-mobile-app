<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/browser_actions_bg_grey"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">

        <TextView
            android:id="@+id/part_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/part_name"
            style="Base.TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/part_id"
            android:text="Title"
            android:textColor="@color/colorPrimaryDark" />


        <TextView
            android:id="@+id/part_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/part_name"
            android:text="@string/money"
            android:textColor="@color/colorPrimaryDark" />


        <ImageView
            android:id="@+id/part_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/part_price"
            android:layout_centerHorizontal="true"
            android:src="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/part_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/part_image"
            android:text="Sample description..."
            android:textColor="#000"
            android:textSize="15sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>